{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "allowJs": true,
      "esModuleInterop": true,
      "target": "es5", 
      "lib": ["es6"], 
      "sourceMap": true,
      "outDir": "./lib",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots" : ["./node_modules/@types", "./typings"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }